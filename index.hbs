{{!< default}}

{{#contentFor "styles"}}
    <style>
        .owl .owl-prev:before {
            content: "Prev";
        }

        .owl .owl-next:before {
            content: "Next";
        }
    </style>
{{/contentFor}}

<div class="content-area">
    <main class="site-main">
        {{#get "tags" limit="all" order="created_at desc"}}
            <div class="tag-feed owl" data-count="{{pagination.total}}">
                {{#foreach tags}}
                    <div class="tag u-placeholder">
                        {{#if feature_image}}
                            <img class="tag-image lazyload u-object-fit"
                                data-src="{{img_url feature_image}}"
                                src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                                alt="{{name}}">
                        {{/if}}
                        <div class="tag-content">
                            <h2 class="tag-name">{{name}}</h2>
                            {{#if description}}
                                <div class="tag-description">
                                    {{description}}
                                </div>
                            {{/if}}
                        </div>
                        <a class="u-permalink" href="{{url}}"></a>
                    </div>
                {{/foreach}}
            </div>
        {{/get}}
    </main>
</div>
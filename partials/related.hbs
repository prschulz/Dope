{{#get "posts" limit="3" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags" as |related|}}
    {{#if related}}
        <section class="related-posts container medium">
            <h2>Related Posts</h2>
            <div class="post-feed">
                {{#foreach related}}
                    <article class="post-list {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
                        {{> post-media same_height=true ratio="rectangle"}}
                        <div class="post-wrapper">
                            {{> post-header tag="h4"}}
                            {{> post-footer}}
                        </div>
                    </article>
                {{/foreach}}
            </div>
        </section>
    {{/if}}
{{/get}}